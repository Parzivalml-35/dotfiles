# --- VISUAL Y LÍNEAS ---
set linenumbers
set numbercolor cyan
set titlecolor white,blue
set statuscolor white,green
set mouse
set constantshow
set indicator

# --- EDICIÓN ---
set autoindent
set softwrap
set tabsize 4
set tabstospaces
set zap

# --- SINTAXIS (ESTO DA EL COLOR AL CÓDIGO) ---
include "/usr/share/nano/*.nanorc"
include "/usr/share/nano-syntax-highlighting/*.nanorc"
